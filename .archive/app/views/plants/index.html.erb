<h1>Listing plants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Default max root zone depth</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%= plant.name %></td>
    <td><%= plant.type %></td>
    <td><%= plant.default_max_root_zone_depth %></td>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

