<div id="tableDataBox">

        <script type="text/javascript">
          var lastsel;
          jQuery(document).ready(function(){
          var mygrid = jQuery("#weather").jqGrid({
              url:'/field_daily_weather?q=1',
              editurl:'/field_daily_weather/post_data',
              datatype: "json",
              colNames:['ID','Date','rET','Rain','Irrig','% Mois','% Cov','LAI','Adj. ET','AD','Deep Dr'],
              colModel:[{name:'id', index:'id',width:1},
                             {name:'date', index:'date',width:75},
                             {name:'ref_et', index:'ref_et',width:47,editable:true},
                             {name:'rain', index:'rain',width:47,editable:true},
                             {name:'irrigation', index:'irrigation',width:47,editable:true},
                             {name:'pct_moisture', index:'pct_moisture',width:47,editable:true},
                             {name:'entered_pct_cover', index:'entered_pct_cover',width:47,editable:true},
                             {name:'entered_leaf_area_index', index:'entered_leaf_area_index',width:47,editable:true},
                             {name:'adj_et', index:'adj_et',width:47},
                             {name:'ad', index:'ad',width:47},
                             {name:'deep_drainage', index:'deep_drainage',width:47}],
              pager: '#weather_pager',
              rowNum:10,
              rowList:[10,25,50,100],
              imgpath: '/images/jqgrid',
              sortname: '',
              viewrecords: true,
              height: 150,
              sortorder: '',
              gridview: false,
              scrollrows: true,
              autowidth: false,
              rownumbers: false,
              multiselect: false,
              
              onSelectRow: function(id){ 
                if(id && id!==lastsel){ 
                  jQuery('#weather').restoreRow(lastsel);
                  jQuery('#weather').editRow(id,true); 
                  lastsel=id; 
                } 
              },             
              
              
              subGrid:false,
              
              caption: "Edit Observed Values Below"
            })
            .navGrid('#weather_pager',
              {edit:false,add:true,del:true,search:false,refresh:true},
              {afterSubmit:function(r,data){return true;(r,data,'edit');}},
              {afterSubmit:function(r,data){return true;(r,data,'add');}},
              {afterSubmit:function(r,data){return true;(r,data,'delete');}}
            )
            .navButtonAdd("#weather_pager",{caption:"",title:"Toggle Search Toolbar", buttonicon :'ui-icon-search', onClickButton:function(){ mygrid[0].toggleToolbar() } })
            
            
            mygrid.filterToolbar();mygrid[0].toggleToolbar()
          });
        </script>

        <table id="weather" class="scroll" cellpadding="0" cellspacing="0"></table>
        <div id="weather_pager" class="scroll" style="text-align:center;"></div>
      
</div>