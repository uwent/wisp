<h2>Users</h2>

<br />
<%= will_paginate @users, class: :apple_pagination %>

<table width="90%" style="margin-left: 5%;">
  <thead>
    <tr>
      <th width="50%">Email</th>
      <th width="20%">Created</th>
      <th width="20%">Last Signed In</th>
      <th width="10%">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.last_sign_in_at.try(:to_date) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= will_paginate @users, class: :apple_pagination %>
