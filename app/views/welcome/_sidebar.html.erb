<script type="text/javascript">
  var new_login = <%= @new_login ? "true" : "false"%>;
  window.onload = function(){
    // This serves as a proxy for "Are we on a page requiring login?"
    if (document.getElementById('logout')) {
      if (new_login) {
        // Expand the "New User Account Created" head to draw attention to it
        $('#new_login').animate({fontSize:'200%'},600);
        // Likewise the "Logout" button, so they see the name
        $('#logout').animate({fontSize:'150%'},600);
        // Shrink the "Logout" button back to normal, and shrink the CNA head
        $('#logout').animate({fontSize:'100%'},800,
          function() {
              $('#new_login').animate({fontSize:'90%'},100);
          }
        );
      }
    }
  };
</script>
