<script>
  let lastsel;

  $(document).ready(function() {
    let mygrid = $("#weather_station_data").jqGrid({
      url: '<%= url_for controller: "weather_station_data", weather_station_id: @weather_station, year: @year, user_id: @user, q: 1 %>',
      editurl: '<%= url_for controller: "weather_station_data", action: "post_data", weather_station_id: @weather_station, user_id: @user, year: @year %>',
      datatype: "json",
      colNames: ['Date', 'Rainfall', 'Irrigation', 'Soil Moisture', 'Potential ET', '% Cover', 'Notes', 'ID'],
      colModel: [
        { name: 'date', index: 'date', width: 35 },
        { name: 'rain', index: 'rain', width: 25, editable: true, align: 'right', editrules: { number: true, minValue: 0.0, maxValue: 10.0 } },
        { name: 'irrigation', index: 'irrigation', width: 25, editable: true, align: 'right', editrules: { number: true, minValue: 0.0, maxValue: 10.0 } },
        { name: 'soil_moisture', index: 'soil_moisture', width: 40, editable: true, align: 'right', editrules: { number: true, minValue: 0.0, maxValue: 100.0 } },
        { name: 'ref_et', index: 'ref_et', width: 30, editable: true, align: 'right', editrules: { number: true, minValue: 0.001, maxValue: 0.6 } },
        { name: 'entered_pct_cover', index: 'entered_pct_cover', width: 40, editable: true, align: 'right', editrules: { number: true, minValue: 0.0, maxValue: 100.0 } },
        { name: 'notes', index: 'notes', width: 150, editable: true, align: 'right' },
        { name: 'id', index: 'id', hidden: true, width: 1 }
      ],
      pager: '#weather_station_data_pager',
      rowNum: <%= FieldDailyWeather::SEASON_DAYS %>,
      rowList: [<%= FieldDailyWeather::SEASON_DAYS %>],
      imgpath: '<%= image_folder_path("jqgrid") %>',
      sortname: '',
      viewrecords: true,
      height: 300,
      sortorder: '',
      gridview: false,
      scrollrows: true,
      autowidth: true,
      rownumbers: false,
      multiselect: false,
      onSelectRow: function(id) {
        if (id && id !== lastsel) {
          $('#weather_station_data').restoreRow(lastsel);
          $('#weather_station_data').editRow(id, true);
          lastsel = id;
        }
      },
      subGrid: false,
      caption: "Field Group <%= @weather_station.name %>",
    })
    mygrid.filterToolbar();
    mygrid[0].toggleToolbar();
  });
</script>

<div id="stationDataGrid">
  <h3>Enter shared data for this group</h3>
  <i>All inputs in inches. Click any cell to edit a value. You must press 'Enter' to save your edits.</i><br>
  <div class="content-box">
    <table id="weather_station_data" class="scroll" cellpadding="0" cellspacing="0"></table>
  </div>
</div>
