<% content_for :title do %>
  WISP: Wisconsin Irrigation Scheduler <%= Time.now.year %>
<% end %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "style" -%>
<% end %>

<% content_for :welcome do %>
  <%= render :partial => 'wisp/sidebar' %>
<% end %>

<table>
  <tr><th>Pivot</th><th>Name</th><th>Location</th><th>Notes</th></tr>
<% @weather_stations.each do |weather_station| %>
  <tr>
    <td>
      <% p = weather_station.pivot
         p_name = p ? p.name : "No pivot assigned"
      %>
      <%=h p_name %>
    </td>
    <td><%=h weather_station.name %></td>
    <td><%=h weather_station.location %></td>
    <td><%=h weather_station.notes %></td>
    <td><%= link_to 'Show', weather_station %></td>
    <td><%= link_to 'Edit', edit_weather_station_path(weather_station) %></td>
    <td><%= button_to 'Delete', weather_station, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Weather station', new_weather_station_path %>
