<% content_for :title do %>
  WISP: Wisconsin Irrigation Scheduler <%= Time.now.year %>
<% end %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "style" -%>
<% end %>

<% content_for :welcome do %>
  <%= render :partial => 'wisp/sidebar' %>
<% end %>

<table>
  <%= render :partial => 'wisp/partials/scaffold_table_headers', :locals => {:obj_class => WeatherStation} %>
<% @weather_stations.each do |weather_station| %>
  <tr>
    <%= render :partial => 'wisp/partials/scaffold_table_show', :locals => {:obj => weather_station } %>
    <td><%= link_to 'Show', weather_station %></td>
    <td><%= link_to 'Edit', edit_weather_station_path(weather_station) %></td>
    <td><%= button_to 'Destroy', weather_station, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Weather station', new_weather_station_path %>
