<% content_for :title do %>
  WISP: Wisconsin Irrigation Scheduler 2012
<% end %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "style" -%>
<% end %>

<% content_for :welcome do %>
  <%= render :partial => 'wisp/sidebar' %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <b>Pivot:</b>
  <%= @weather_station.pivot ? @weather_station.pivot.name : "No pivot selected" %>
</p>

<p>
  <b>Name:</b>
  <%= @weather_station.name %>
</p>

<p>
  <b>Location:</b>
  <%= @weather_station.location %>
</p>

<p>
  <b>Notes:</b>
  <%= @weather_station.notes %>
</p>


<%= link_to 'Edit', edit_weather_station_path(@weather_station) %> |
<%= link_to 'Back', weather_stations_path %>
