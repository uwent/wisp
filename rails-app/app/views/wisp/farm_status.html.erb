<% content_for :title do %>
  WISP: Wisconsin Irrigation Scheduler 2012
<% end %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "style" -%>
  <%= jqgrid_stylesheets.html_safe -%>
  
  <style type="text/css">
  	h2 {text-align:center;}
  	#farmDataBox
  	{
  		position:absolute;
  		left:275px;
  		top:150px;
  		width:920px;
  		padding:2px;
  		border:1px solid gray;
  		margin:0px;
  	}
		
  	#farmProblemsBox
  	{
  		position:absolute;
  		left:275px;
  		top:400px;
  		width:920px;
  		padding:2px;
  		border:1px solid gray;
  		margin:0px;
  	}
  </style>
<% end %>

<% content_for :welcome do %>
  <%= render :partial => 'sidebar' %>
<% end %>

<% content_for :scripts do %>
  <%= jqgrid_javascripts.html_safe %>
  <script type="text/javascript">
    function fillProblemsBox(id) {
      $.ajax(
        {
          type: "GET",
          url: "<%= url_for(:controller => 'farms', :action => :problems,
                            :user_id => @user) %>&farm_id="+id,
          dataType: 'html',
          async: false,
          success: function(newHtml)
          {
            // Set the HTML of the summary box to the new stuff
            $('#farmProblemsBox').html(newHtml);
          }
        });
    }
  </script>
<% end %>

<h2>WISP Farm Data</h2>

<div id="farmDataBox">
  <%= render :partial => '/wisp/partials/farm_setup_grid'%>
</div>
<div id="farmProblemsBox">
</div>
<% content_for :footer do %>
<!-- Nothing needed in here for now -->
<% end %>
