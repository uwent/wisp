<%= content_for :scripts do %>
  <%= jqgrid_javascripts.html_safe %>
<% end %>


<% content_for :welcome do %>
  <%= render :partial => 'sidebar' %>
<% end %>

<h2>Wisp Pivot, Field and Crops Data</h2>

<div id="pivotDataBox">
	<table><tr><td><b>Select A Different Pivot</b>   <form action="/wisp/pivot_crop">
  <td><%= select_tag "pivot_id", options_from_collection_for_select(@pivots,"id","name"), :selected => @pivot[:id] %> </td>
    <td><%= submit_tag "Go to this pivot"%></td>
    </form></td>
	</tr> </table>
	<h2>Pivot Data</h2>
	
	<%= form_for @pivot do |f| %>
	<table>
	  <tr>
	    <td>  <div class="field">
          <%= f.label :name %>
          </td><td>
          <%= f.text_field :name %>
        </div>
      </td>
      <td>  <div class="field">
          <%= f.label :latitude %>
        </td><td>
          <%= f.text_field :latitude %>
        </div>
      </td>
      <td>  <div class="field">
          <%= f.label :longitude %>
        </td><td>
          <%= f.text_field :longitude %>
        </div>
      </td>
    </tr>
    <tr>
      <td>  <div class="field">
          <%= f.label :equipment %>
        </td><td>
          <%= f.text_field :equipment %>
        </div>
      </td>

      <td>  <div class="field">
          <%= f.label :pump_capacity %>
        </td><td>
          <%= f.text_field :pump_capacity %>
        </div>
      </td>
      
    </tr>
    <tr>
      <td>  <div class="field">
          <%= f.label :some_energy_rate_metric %>
        </td><td>
          <%= f.text_field :some_energy_rate_metric %>
        </div>
      </td>
      <td>  <div class="field">
          <%= f.label :cropping_year %>
        </td><td>
          <%= f.text_field :cropping_year %>
        </div>
      </td>
      <td>  <div class="field">
          <%= f.label :notes %>
        </td><td>
          <%= f.text_field :notes %>
        </div>
      </td>
      
    </tr>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
	<% end %>
<table>	<tr><td><%= link_to "Add New Pivot", :controller => 'pivots', :action => :new, :farm_id => @farm[:id] %></td>
	<td><%= button_to "Delete pivot", :controller => 'pivots', :action => :destroy, :id => @pivot[:id], :confirm => "Are you sure?"%></td></tr></table>
</div>

<div id="fieldDataBox">
	<h2>Field Data for <%= @pivot.name %></h2>
	<%= render :partial => '/wisp/partials/field_setup_grid'%>
	<%= submit_tag "Add Field", :type => 'button', :onclick => 'alert("Add field button")' %><br/>
	<%= submit_tag "Delete Selected Field", :type => 'button', :onclick => 'alert("Delete field button")' %>
</div>
<div id="cropsDataBox">
	<h2>Crop Data for <%= @field.name %></h2>
	<%= render :partial => '/wisp/partials/crop_setup_grid'%>
	<%= submit_tag "Add Crop", :type => 'button', :onclick => 'alert("Add crop button")' %>
	<%= submit_tag "Delete Selected Crop", :type => 'button', :onclick => 'alert("Delete crop button")' %>
</div>


<% content_for :footer do %>
<%= render :partial => '/wisp/partials/debug'%>
<% end %>